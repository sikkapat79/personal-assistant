{
  "name": "pa",
  "version": "0.1.0",
  "description": "Self-discipline daily journal â€“ logs and TODOs in Notion",
  "type": "module",
  "main": "src/adapters/inbound/cli/index.ts",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "journal": "bun run src/adapters/inbound/cli/index.ts",
    "start": "bun run src/adapters/inbound/cli/index.ts",
    "ping": "bun run src/adapters/inbound/cli/index.ts ping",
    "daily": "bun run src/adapters/inbound/cli/index.ts today",
    "today": "bun run src/adapters/inbound/cli/index.ts today",
    "ui": "bun run src/adapters/inbound/http/server.ts",
    "tui": "bun run src/adapters/inbound/cli/tui-app.tsx",
    "tui:mock": "bun run src/adapters/inbound/cli/tui-app-mock.tsx",
    "test": "bun run typecheck && bun run test:tui-scroll && bun run test:composition-mock",
    "test:tui-scroll": "bun tests/tui-activity-scroll.test.mjs",
    "test:composition-mock": "bun tests/composition-mock.test.ts",
    "test:notion-mapping": "bun tests/notion-mapping.test.ts",
    "test:file-metadata-store": "bun tests/file-metadata-store.test.ts",
    "test:metadata-bootstrap": "bun tests/metadata-bootstrap.test.ts",
    "test:notion-fetch": "bun tests/notion-fetch.test.ts",
    "test:todo-due-date": "bun tests/todo-due-date.test.ts"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "journal": "bin/journal.mjs"
  },
  "keywords": [
    "notion",
    "journal",
    "cli",
    "todos"
  ],
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.13",
    "@notionhq/client": "^2.2.15",
    "@opentui/core": "^0.1.81",
    "@opentui/react": "^0.1.81",
    "express": "^4.18.2",
    "openai": "^6.22.0",
    "ora": "^8.0.1",
    "prompts": "^2.4.2",
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/prompts": "^2.4.9",
    "@types/react": "^19",
    "typescript": "^5.3.0"
  }
}
